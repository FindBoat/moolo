.page-post-input
  margin-bottom 10px
  textarea
    resize none
    font-size 1.25em
    height 35px
    overflow hidden
    box-shadow: none
    &:focus
      outline none
      border none
      box-shadow: none
      padding 0
      height 200px
      overflow auto

  .post-footer
    &.attr-hide
      opacity 0

    .action
      span
        padding 0 10px
      a
        padding 0 10px
        cursor pointer
        color #999
        &:hover
          color #000

