.page-carousel
  .header(ng-repeat='m in mems' ng-show='$index==indexShow')
    .header-top.date-text
      p.date-text {{m.createAt | momentFormat: 'MMMM DD, YYYY'}}
    .header-content
      div(ng-bind-html='m.content')
    .header-bottom.pull-right.attr-text
      i.fa.fa-map-marker
      &nbsp;{{m.location}}

  .refresh(ng-show='indexShow>=0')
    a(ng-click='refresh()')
      i.fa.fa-circle-o-notch.fa-spin.fa-lg
