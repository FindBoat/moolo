@import 'bootstrap'

.ng-hide 
  display none !important

// Overall.
.container
  max-width 720px

.fixed-container
  padding-top 50px

// Text.
body
  font-family "minion-pro", Adobe Garamond Pro, Georgia, Times, serif
  font-size 14px
  line-height 180%
  color #18191a
  -webkit-font-smoothing: antialiased

p
  font-family "leitura-news" Georgia serif
  font-size 19px
  line-height 1.55556
  -webkit-font-smoothing antialiased
  color #3d464d

.attr-text, .date-text
  font-family "franklin-gothic-urw" Geneva Verdana san-serif
  font-size 1.4rem
  font-weight 600
  line-height 1.55556
  color #3d464d

  -webkit-transition opacity .8s ease-in-out
  -moz-transition opacity .8s ease-in-out
  -ms-transition opacity .8s ease-in-out
  -o-transition opacity .8s ease-in-out
  transition opacity .8s ease-in-out

.date-text
  font-size 1.6rem
  font-weight 700

