@import 'bootstrap'

// Overall.
.container
  max-width 720px

.fixed-container
  padding-top 50px

// Text.
body
  font-family "minion-pro", Adobe Garamond Pro, Georgia, Times, serif
  font-size 14px
  line-height 180%
  color #18191a
  -webkit-font-smoothing: antialiased


.header-text
  font-family "minion-pro", Adobe Garamond Pro, Georgia, Times, serif
  font-size 1.125em
  line-height 1.4em
  color #000
  text-shadow 0 1px rgba(255,255,255,.4)
  padding 15px 0
  -webkit-font-smoothing: antialiased

p
  font-family "minion-pro", Adobe Garamond Pro, Georgia, Times, serif
  font-size 1.25em
  line-height 180%
  color #18191a
  -webkit-font-smoothing: antialiased

.attr-text, .date-text
  color #555
  font-family "brandon-grotesque", Futura, Helvetica Neue, Helvetica, sans-serif
  font-size .75em
  font-weight 500
  text-transform uppercase
  letter-spacing .2em
  -webkit-font-smoothing: antialiased

  -webkit-transition opacity .8s ease-in-out
  -moz-transition opacity .8s ease-in-out
  -ms-transition opacity .8s ease-in-out
  -o-transition opacity .8s ease-in-out
  transition opacity .8s ease-in-out

.date-text
  font-family "calluna-sans", Futura, Helvetica Neue, Helvetica, sans-serif
  font-size 1em
  font-weight 500
  color #000
    
// Navbar.
nav
  border none !important
  background-color #fefefe !important
  padding 0 100px
  a
    cursor pointer
  ul
    -webkit-transition opacity 1s ease-in-out
    -moz-transition opacity 1s ease-in-out
    -ms-transition opacity 1s ease-in-out
    -o-transition opacity 1s ease-in-out
    transition opacity 1s ease-in-out

  &.nav-hide
    background-color transparent
    ul
      opacity 0

  .navbar-brand
    color #000 !important
    &.shake
      -webkit-animation .65s rubberBand ease-in-out
      animation .65s rubberBand ease-in-out

    &:hover
      -webkit-animation .65s rubberBand ease-in-out
      animation .65s rubberBand ease-in-out
      

// Footer.
.page-footer
  text-align center
  border-top 1px solid #ddd
  margin-top 30px
  padding 30px 0
  p
    color #999
    font-size 1em
    font-weight 600