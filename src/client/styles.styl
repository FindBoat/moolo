// Buttons.
.btn-primary
  opacity .7
  color #fff
  background-color #000
  border-color #000
  &:hover
    opacity: .8
    color #fff
    background-color #000
    border-color #000

// Forms.
form
  label
    font-size 18px
  .form-control
    height 40px
    &:focus
      outline: none !important;
      border:1px solid #999;
  
    
// Navbar.
nav
  border none !important
  background-color #fefefe !important
  padding 0 100px
  a
    cursor pointer
  ul
    -webkit-transition opacity 1s ease-in-out
    -moz-transition opacity 1s ease-in-out
    -ms-transition opacity 1s ease-in-out
    -o-transition opacity 1s ease-in-out
    transition opacity 1s ease-in-out

  &.nav-hide
    background-color transparent
    ul
      opacity 0

  .navbar-brand
    color #000 !important
    &.shake
      -webkit-animation .65s rubberBand ease-in-out
      animation .65s rubberBand ease-in-out

    &:hover
      -webkit-animation .65s rubberBand ease-in-out
      animation .65s rubberBand ease-in-out
      

// Footer.
.page-footer
  text-align center
  border-top 1px solid #ddd
  margin-top 30px
  padding 30px 0
  p
    color #999
    font-size 1em
    font-weight 600